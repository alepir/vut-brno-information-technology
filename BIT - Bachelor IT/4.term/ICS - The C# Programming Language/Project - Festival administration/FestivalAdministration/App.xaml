<Application x:Class="FestivalAdministration.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:convertors="clr-namespace:FestivalAdministration.Convertors">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--Stylesheet-->
                <ResourceDictionary Source="./Common/WindowStylesheet.xaml" />
                <ResourceDictionary Source="./Common/Design.xaml" />
                <ResourceDictionary Source="./Common/ComboBoxDetailView.xaml" />
                <ResourceDictionary>
                    <convertors:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
                    <convertors:ImageConverter x:Key="ImageConverter" />
                    <convertors:DataGridCellConverter x:Key="DataGridCellConverter" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>